{
    "name": "UVaCPTracker",
    "version": "1.0.3",
    "homepage_url": "https://github.com/mari-linhares/UVACPTracker",
    "manifest_version": 2,

    "description" : "Track how many problems of the Competitive Programming 3 book you have done!",
    "icons": { "16": "icons/icon.png", "48": "icons/icon.png", "128": "icons/icon.png" },

    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "UVaCPTracker"
    },

    "background": {
        "page" : "src/background/background.html",
        "persistent": false
    },

    "permissions": ["storage", "http://uhunt.felix-halim.net/api/", "https://cors.io/"]
}
